<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>Book was successfully created.
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <table>
      <thead>
       <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
        <p id="notice"></p>
        <% @books.each do |book| %>
        <tr>
	      <td><%= book.title %></td>
          <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
        </tr>
        <% end %>
        </tbody>
  </table>
<%= render 'layouts/error_form', { book: @book } %>
<%= form_with model: @book, local:true do |f| %>
  <h2>Newbook</h2>
  <h2>Title</h2>
  <p><%= f.text_field :title %></p>
  <h2>Body</h2>
 <p><%= f.text_area :body %></p>
  <p><%= f.submit 'Create Book' %></P>
  <% end %>